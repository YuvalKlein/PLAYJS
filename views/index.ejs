<% include partials/header %>

<div class="container-fluid">

  <div class="day">
    <h4>Today</h4>
  </div>


    <% sessions.forEach(function(session) { %>
      <div class="unit d-flex flex-row bd-highlight mb-3">
         
        <div class="p-2 bd-highlight col-2">
            <div class="row hour"><%= session.time.getHours() + ":00" %></div>
            <div class="row hour"><%= session.time.getHours() + 1 + ":00" %></div>
        </div>
        <div class="p-2 bd-highlight col-7">
            <div class="row name" id="class-name"><a href="/index/<%= session._id %>"><%= session.title %></a></div>
            <div class="row instructor"><%= session.instructor %></div>
            <div class="row place"><%= session.location %></div>
      
        </div>
        <%session.players.forEach(function(player) {%>
          <% if(!player.id.equals(currentUser._id)){ %>
            <form action="/session/<%= session._id %>?_method=PUT" method="POST">
              <div class="p-2 bd-highlight col-3"><input type="submit" class="btn btn-secondary btn-lg" id="book" value="BOOK"></div>
            </form>
            <%  } else { %>
              <form action="/session/players/<%= session._id %>?_method=DELETE" method="POST"> 
              <div class="p-2 bd-highlight col-3"><button type="button" class="btn btn-secondary btn-lg" id="booked">CANCEL</button></div>
              </form> 
            <% } %>
        <% }) %>
      </div>
    <% }); %>
    <div class="unit"></div>
    <div class="unit"></div>
    <div class="unit"></div>

</div>

<a href="/index/new" type="button" class="mdc-fab" aria-label="Add">
  <span class="mdc-fab__icon material-icons"><i class="fas fa-plus-circle"></i></span>
</a>

