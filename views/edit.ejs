<% include partials/header %>

<div class="container">
    <div class="row">
       <h1 style="text-align: center">Edit <%=classs.title %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/index/<%= classs._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="class[title]" value="<%=classs.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="class[image]" value="<%=classs.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="class[location]" value="<%=classs.location %>">
                </div>
                <div class="form-group">
                    <select class="form-control" id="choose" name="class[instructor]">
                        <option value="None">None</option>

                         <option value="<%=instructor.firstname %>"><%=.instructor.firstname %></option>

                    </select>
                </div>
                <div class="form-group">
                    <input class="form-control" type="date" name="class[time]" value="<%=classs.time %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="time" name="class[time]" value="<%=classs.time %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            
            <a href="/index">Go Bace</a> 
        </div>
    </div>
    
    
</div>

<% include partials/footer %>