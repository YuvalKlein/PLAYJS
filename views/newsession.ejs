<% include partials/header %>

<div class="container">
    <div class="row">
       <h1 style="text-align: center">Create a New Session</h1>
        <div class="textcontrol">
            <form action="/index" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="session[title]" placeholder="title">
                </div>
                <div class="form-group">
                        <input type="file" name="image" accept="image/*">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location" placeholder="Location">
                </div>
                <div class="form-group">
                    <select class="form-control" name="session[instructor]">
                        <option value="None">None</option>
                        <% instructors.forEach(function(instructor) { %>
                            <option value="<%= instructor%>"><%=instructor.firstname + " " + instructor.lastname%></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <input class="form-control" type="date" name="session[time]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="time" name="session[time]">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Submit</button>
                </div>
            </form>
            
            <a href="/index">Go Bace</a> 
        </div>
    </div>
    
    
</div>

<% include partials/footer %>